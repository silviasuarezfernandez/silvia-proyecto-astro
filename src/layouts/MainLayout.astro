---
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <!-- Fondo -->
    <img id="background" src="/cielo.png" alt="Fondo de cielo" fetchpriority="high" />

    <div id="container">
      <header>
        <nav>
          <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/about">Sobre nosotros</a></li>
            <li><a href="/contact">Contacto</a></li>
          </ul>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <p>&copy; 2025 Silvia</p>
      </footer>
    </div>

    <style>
      #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        opacity: 0.7;
        filter: blur(0px);
      }

      #container {
        min-height: 100vh;
        position: relative;
      }

      nav {
        background-color: #f2f2f2;
        padding: 1rem;
      }

      ul {
        list-style: none;
        display: flex;
        gap: 1rem;
      }

      a {
        text-decoration: none;
        color: #333;
      }

      a:hover {
        text-decoration: underline;
      }

      footer {
        margin-top: 2rem;
        padding: 1rem;
        background-color: #eee;
        text-align: center;
        font-size: 0.9rem;
      }
    </style>
  </body>
</html>







